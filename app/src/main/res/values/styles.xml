<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">#ffba0406</item>
        <item name="colorAccent">@color/tabsScrollColor</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- disable window title -->
        <item name="android:windowNoTitle">true</item>
        <!-- disable window actionbar, cause u have an toolbar -->
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:title">@style/TextTitle</item>
    </style>


    <style name="myTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/tabsScrollColor</item>
    </style>

    <!--styling color for arrow-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/bluegray700</item>
    </style>

    <style name="TextTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontPath">fonts/Roboto-Black.ttf</item>
        <item name="android:textColor">@color/bluegray700</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.FontPath.Bold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Black.ttf</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.FontPath.Light" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="TextAppearance.FontPath.Italic" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Italic.ttf</item>
    </style>

    <style name="MyEditText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/selector_input</item>
    </style>


    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/color_progress</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="android:layout_marginBottom">-7dp</item>
        <item name="android:layout_marginTop">-7dp</item>
    </style>


</resources>